{
    "name": "Verint Updater Bot",
    "version": "1.0.47",
    "description": "Verint Data Extraction bot",
    "author": "Marvin Rivera",
    "permissions": ["storage", "tabs", "scripting", "alarms", "notifications"],
    "host_permissions": ["https://*.wfo.telusinternational.com/*", "https://*.google.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://portal.wfo.telusinternational.com/wfo/control/timerecord_quickview_fs?NEWUINAV=1"],
        "js": ["jquery-3.6.1.min.js", "content.js"]
      }
    ],
    "action": {
      "default_icon": {
        "16": "icons/bot-inactive-16.png"
      },
      "default_title": "Verint Sch (Inactive)"
    },
    "icons": {
      "16": "icons/bot-16.png",
      "32": "icons/bot-32.png",
      "64": "icons/bot-64.png",
      "128": "icons/bot-128.png"
    },
    "options_page": "options.html",
    "options_ui": {
      "page": "options.html",
      "open_in_tab": false
    },
    "manifest_version": 3
}
